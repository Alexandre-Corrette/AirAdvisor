{% extends 'base.html.twig' %}

{% block title %}Flight index{% endblock %}

{% block body %}
    <h1>Flight index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FlightNumber</th>
                <th>DepartureCity</th>
                <th>ArrivalCity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flight in flights %}
            <tr>
                <td>{{ flight.id }}</td>
                <td>{{ flight.flightNumber }}</td>
                <td>{{ flight.departureCity }}</td>
                <td>{{ flight.arrivalCity }}</td>
                <td>
                    <a href="{{ path('flight_show', {'id': flight.id}) }}">show</a>
                    <a href="{{ path('flight_edit', {'id': flight.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('flight_new') }}">Create new</a>
{% endblock %}

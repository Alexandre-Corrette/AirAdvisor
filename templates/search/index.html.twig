{% extends "base.html.twig" %}
{% block title %}{{ website }} | Résultats {% endblock %}
{% block content %}
<pre>
    {{ dump(results) }}
</pre>
<div class="container bg-white mt-2 pt-5">
    <div class="row justify-content-center mt-5 mb-4">
        <h1 class="">Les résultats de votre recherche pour le vol de :</h1>
        <h3>data</h3>
    </div>
  
</div>
<div class="container">
    <div class="row row-cols-md-3 g-4">
        
            
           {% for flight in results %}
          
            <div class="col">
                <div class="card mb-3 p-3 shadow">
                    <div class="card-header"> VOL {{flight.flightNumber|upper}}  <br><span>Compagnie : {{flight.airlineName|upper}}</span>  </div>
                    <div class="card-body">
                        <h5 class="card-title text-decoration-underline">
                            Départ : {{flight.scheduledTime}}
                        </h5>
                        <div class="card-text mb-2">
                           <span class="">terminal : {#{{flight.departure.terminal|upper}}#}</span>
                           <span>gate : {#{{flight.departure.gate|upper}}#}</span>
                            
                        </div>
                        <h5 class="card-title text-decoration-underline">
                            Arrivée : {{flight.arrivalScheduledTime}}
                           
                        </h5>


                        <div class="card-text">
                            terminal : {#{{flight.arrival.terminal|upper}}#}
                            gate : {#{{flight.arrival.gate|upper}}#}
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-flex justify-content-center">
                        <a href="{{path('comment_list_comments_about_one_flight', {'flightId' : flight.id })}}" class="btn btn-outline-dark  mx-1">Voir les avis</a> 
                        
                        
                    </div>
                    
                </div>
                
            </div>

            
                
         
               
           {% endfor %}
                
          
       
           
       
        
    </div>
</div>





{% endblock %}

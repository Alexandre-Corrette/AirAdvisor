{% extends 'base.html.twig' %}

{% block title %}{{ website }} Avis sur le vol {% endblock %}

{% block content %}
<div class="row justify-content-center mt-5">
    <div class="col col-3">
        <h1>Commentaires à propos du vol : </h1>
        
     
                
                {% for comment in app.user.comments %}
                     <div class="card mb-3">
    
                        <div class="card-body">
                            <h3 class="card-title">{{ comment.titre }} {{ comment.rate }} /5</h3>
                            <p>{{comment.comment}}</p>
                            <p class="card-text">Vol Numéro{{ comment.flight }}</p>
                          <p>Aéroport de départ : {{comment.flight.departureCity}}</p>
                            <p class="card-text">Voyageur {{comment.author}}</p>
                            
                        </div>
                    
        

                        <div class="d-flex flex-row justify-content-center">
                            <a class="btn btn-outline-dark w-50 mb-3 mx-2" href="{{ path('comment_show', {'id': comment.id}) }}">Voir plus</a>
                            <a class="btn btn-outline-dark w-50 mb-3 mx-2" href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                        </div>
                        
                            
                        </p>
                    </div>
                {% else %}
                    <div>
                        <p colspan="4">no records found</p>
                    </div>
                {% endfor %}
                
       
    </div>
</div>

    
{% endblock %}

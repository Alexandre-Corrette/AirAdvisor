{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<div class="mainContainer">
    <div class="comment container">
        <h1>Comment index</h1>
        
          
                
                {% for comment in app.user.comments %}
                     <div class="comment item">
    
                        
                        
                        <p>{{ comment.flight }}</p>
                        <p>{{ comment.author }}</p>

                        
                        <p>{{ comment.comment }} {{ comment.rate }} </p>
                            <a href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                            <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                        </p>
                    </div>
                {% else %}
                    <div>
                        <p colspan="4">no records found</p>
                    </div>
                {% endfor %}
                
       
    </div>
</div>

    <a href="{{ app.user? path('comment_new', {'pseudo': app.user.firstName}): path('login') }}">Create new</a>
{% endblock %}

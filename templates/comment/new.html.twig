{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block header %}
{{ include('_navigation.html.twig') }}
{% endblock %}
{% block content %}
<pre>
    {{ dump(flight) }}
</pre>
    {% if flightNumber is defined %}
    <div class="row justify-content-center">
        <div class="col col-md-6">
            <div class="card mb-3 mt-5">
                <div class="card-body">
                    <h1 class="card-title">Rédigez votre avis</h1>
                    <h3>Vo N° {{flightNumber|upper}}</h3>
                    <h3>auteur : {{app.user}}</h3>
            
                    {{ include('comment/_form.html.twig') }}
            
                    
                </div>
            </div>
            <a class="btn btn-outline-dark" href="{{ path('comment_index') }}">Retour à la liste</a>
        </div>
    </div>
    {% else %}
    <div class="row mt-5 pt-5 justify-content-center">
        <div class="col col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">{{error}}</h4>
                </div>
                
            </div>
            
        </div>   
    </div>
        
    {% endif %}
    

{% endblock %}




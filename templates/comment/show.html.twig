{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ comment.rate }}</td>
            </tr>
           
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>
{% if app.user is same as comment.author %}
<a class="btn btn-outline-dark"href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier mon commentaire</a>
{% endif %}
    

    {{ include('comment/_delete_form.html.twig') }}
